@using EntityLayer.Concrete
@model List<Writer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table table-bordered">
    <tr>
        <th>Kategori ID</th>
        <th>Yazar Adı</th>
        <th>Yazar Soyadı</th>
        <th>Yazar Mail</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
        <td>@item.WriterID</td>
        <td>@item.WriterName</td>
        <td>@item.WriterSurname</td>
        <td>@item.WriterMail</td>
    </tr>
    }
</table>

